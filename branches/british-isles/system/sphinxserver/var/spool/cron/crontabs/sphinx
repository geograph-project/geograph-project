#25 3 * * *  /usr/local/bin/indexer --config /usr/local/etc/sphinx.conf sample5 --rotate

35 5 * * *      /usr/local/bin/indexer --config /usr/local/etc/sphinx.conf sample8A sample8B sample8C sample8D sample8E --rotate --sighup-each
30 0-1,7-23 * * * /usr/local/bin/indexer --config /usr/local/etc/sphinx.conf sample8E --rotate


10 8 * * *  /usr/local/bin/indexer --config /usr/local/etc/sphinx.conf content1 --rotate


