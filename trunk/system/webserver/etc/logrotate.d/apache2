/var/log/apache2/.log /var/www/geograph_live/logs/*_log /var/www/geograph_svn/logs/*_log /var/www/geograph_svn/logs/*_log /var/www/geograph_static/logs/*_log {
	daily
	missingok
	rotate 3650
	compress
	notifempty
	create 640 root adm
	sharedscripts
	postrotate
		if [ -f /var/run/apache2.pid ]; then
			/etc/init.d/apache2 restart > /dev/null
		fi
                /usr/local/bin/move_apache_logs.pl
	endscript
}
